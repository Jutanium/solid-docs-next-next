---
import IfTS from "./IfTS.tsx";
import { Code } from "astro/components";

export interface Props {
  js?: string;
  code?: boolean;
}

const { js, code } = Astro.props;

const ts = await Astro.slots.render("default");
---

<IfTS client:load>
  <span slot="fallback">
    {code && js ? <code set:html={js} /> : <span set:html={js} />}
  </span>
  {code && ts ? <code set:html={ts} /> : <span set:html={ts} />}
</IfTS>
